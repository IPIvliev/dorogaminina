<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Название" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :text, "Текст" %><br />
    <%= f.cktext_area :text, :width => 600 %>
  </div>
  <div class="field">
    <%= f.label :picture, "Рисунок" %><br />
        <%= image_tag @post.picture_url if @post.picture_url %> <%= f.file_field :picture, :class => "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Сохранить" %>
  </div>
<% end %>
